apiVersion: apps/v1
kind: Deployment
metadata:
  name: cosign-pod
  namespace: {{ tekton_operator_namespace }}
spec:
  selector:
    matchLabels:
      app: cosign-pod
  replicas: 1
  template:
    metadata:
      labels:
        app: cosign-pod
    spec:
      containers:
        - name: cosign-pod
          image: {{cosign_image}}
          env:
            - name: COSIGN_PASSWORD
              value: {{ cosign_password }}
          command: 
            - '/bin/bash'
          args:
            - -c             
            - sleep infinity
          volumeMounts:
          - mountPath: /test
            name: empty-volume
      volumes:
        - name: empty-volume
          emptyDir: {}
      serviceAccountName: cosign-sa
      serviceAccount: cosign-sa
